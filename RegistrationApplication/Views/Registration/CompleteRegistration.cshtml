@model Registration.ViewModel.UserAddress

@{
    ViewData["Title"] = "CompleteRegistration";
}

<h1>Complete your profile</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CompleteRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label"></label>
                <input asp-for="User.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label"></label>
                <input asp-for="User.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="User.Contact" class="control-label"></label>
                <input asp-for="User.Contact" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Street1" class="control-label"></label>
                <input asp-for="Address.Street1" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Street2" class="control-label"></label>
                <input asp-for="Address.Street2" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.State" class="control-label"></label>
                <input asp-for="Address.State" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.ZipCode" class="control-label"></label>
                <input asp-for="Address.ZipCode" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Country" class="control-label"></label>
                <input asp-for="Address.Country" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="User.AllowEmailNotifications" /> @Html.DisplayNameFor(model => model.User.AllowEmailNotifications)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Finish" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

